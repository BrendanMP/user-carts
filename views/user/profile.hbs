<section class="page-section">
    <h2>My Orders</h2>
    <hr>
    {{# each orders }}
        <div class="card mt-1">
            <div class="card-block">
                <strong>Order #{{this.orderNumber}}</strong>
            </div>
            <ul class="list-group list-group-flush">
                {{# each this.items}}
                    <li class="list-group-item">
                        <div>{{this.title}}</div>
                        <span class="tag tag-success">${{this.price}}</span>
                        {{ this.item.title }} | {{ this.qty }} Units
                    </li>
                {{/each}}
            </ul>
            <div class="card-footer">
                <strong>Order Total:</strong> ${{ this.cart.totalPrice}}
            </div>
        </div>
    {{/each}}


</section>
