<section class="page-section cart-section">
    <h3>Shopping Cart</h3>
    <hr class="mb-2">
{{# if products}}
    <div class="row">
        <div class="col-md-12">
            <ul class="list-group">
                {{# each products}}
                    <li class="list-group-item">
                        <div class="row">
                            <div class="col-xs-4 col-lg-2">
                                <div class="thumbnail" style="background-image: url({{ this.item.imagePath }})"></div>
                            </div>
                            <div class="col-xs-8 col-lg-10">
                                <div class="row">
                                    <div class="col-sm-6 col-md-7">
                                        <h4>{{ this.item.title }}</h4>
                                    </div>
                                    <div class="col-sm-6 col-md-3">
                                        <span class="qty">{{ this.qty }}</span>
                                        <a href="/add-to-cart/{{this.item._id}}" class="btn btn-sm btn-primary">
                                            <i class="fa fa-plus fa-fw" aria-hidden="true"></i>
                                        </a>
                                        <a href="/reduce/{{this.item._id}}" class="btn btn-sm btn-secondary">
                                            <i class="fa fa-minus fa-fw " aria-hidden="true"></i>
                                        </a>
                                    </div>
                                    <div class="col-md-2 text-sm-right">
                                        <h4>${{ this.price }}</h4>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </li>
                    <li class="list-group-item hidden-xs-up">
                        <span class="tag-pill tag-default">{{ this.qty }}</span>
                        <strong>{{ this.item.title }}</strong>
                        <span class="tag-pill tag-default">{{ this.price }}</span>
                        <div class="btn-group">
                            <button class="btn btn-primary btn-xs dropdown-toggle" type="button" data-toggle="dropdown">Edit</button>
                            <div class="dropdown-menu" aria-labelledby="supportedContentDropdown">
                                <a class="dropdown-item" href="/user/profile">Profile Settings</a>
                                <a class="dropdown-item" href="/user/logout">Remove Item</a>
                            </div>
                        </div>
                    </li>
                {{/each}}
            </ul>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <h3><span class="float-xs-right mr-1"><span class="mr-1">Total:</span>${{totalPrice}}</span></h3>
        </div>
        <div class="col-md-12">
            <hr>
            <a href="/" class="btn btn-secondary">Continue Shopping</a>
            <a href="/checkout" class="btn btn-success float-xs-right">Checkout</a>
        </div>
    </div>
{{else}}
    <div class="row">
        <div class="col-md-12">
            <h4 class="mb-2">No items in cart.</h4>
            <a href="/" class="btn btn-success">Continue Shopping</a>
        </div>
    </div>
{{/if}}
</section>

