<section class="page-section">
{{# if products}}
    <div class="row">
        <div class="col-md-12">
            <ul class="list-group">
                {{# each products}}
                    <li class="list-group-item">
                        <span class="tag-pill tag-default">{{ this.qty }}</span>
                        <strong>{{ this.item.title }}</strong>
                        <span class="tag-pill tag-default">{{ this.price }}</span>
                        <div class="btn-group">
                            <button class="btn btn-primary btn-xs dropdown-toggle" type="button" data-toggle="dropdown"></button>
                            <ul class="dropdown-menu">
                                <li><a href="#">Reduce by 1</a></li>
                                <li><a href="#">Remove All</a></li>
                            </ul>
                        </div>
                    </li>
                {{/each}}
            </ul>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <strong>Total: ${{totalPrice}}</strong>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <button class="btn btn-success" type="button">Checkout</button>
        </div>
    </div>
{{else}}
    <div class="row">
        <div class="col-md-12">
            <h4>No items in cart.</h4>
        </div>
    </div>
{{/if}}
</section>

